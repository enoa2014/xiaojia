/* Role Badge Component */
.role-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-sm);
  font-weight: var(--weight-medium);
  color: var(--text-on-primary);
  transition: all var(--duration-fast) var(--ease-standard);
  min-height: 88rpx; /* A11y: minimum touch target size */
  padding: 0 var(--space-3);
}

/* Size variants */
.role-badge--sm {
  min-height: 60rpx;
  font-size: var(--font-caption);
  padding: var(--space-1) var(--space-2);
}

.role-badge--md {
  min-height: 88rpx;
  font-size: var(--font-body);
  padding: var(--space-2) var(--space-3);
}

/* Role color variants */
.role-badge--admin {
  background-color: var(--role-admin);
}

.role-badge--social {
  background-color: var(--role-social);
}

.role-badge--volunteer {
  background-color: var(--role-volunteer);
}

.role-badge--parent {
  background-color: var(--role-parent);
}

/* Text styling */
.role-badge__text {
  line-height: var(--lh-tight);
  white-space: nowrap;
}

/* Hover and focus states for better interaction feedback */
.role-badge:active {
  transform: scale(0.98);
  opacity: var(--opacity-disabled);
}