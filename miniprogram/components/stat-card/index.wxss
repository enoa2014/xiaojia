/* StatCard 组件样式 - 基于设计系统 tokens */
.stat-card {
  display: flex;
  flex-direction: column;
  min-height: 200rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  transition: all 250ms cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.stat-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
}

/* 变体样式 */
.stat-card--primary {
  background: linear-gradient(135deg, #22C55E 0%, #34D399 100%);
}

.stat-card--primary .stat-card__label,
.stat-card--primary .stat-card__value {
  color: #FFFFFF;
}

.stat-card--success {
  background: linear-gradient(135deg, #16A34A 0%, #22C55E 100%);
}

.stat-card--success .stat-card__label,
.stat-card--success .stat-card__value {
  color: #FFFFFF;
}

.stat-card--warning {
  background: linear-gradient(135deg, #F59E0B 0%, #FBBF24 100%);
}

.stat-card--warning .stat-card__label,
.stat-card--warning .stat-card__value {
  color: #FFFFFF;
}

.stat-card--danger {
  background: linear-gradient(135deg, #EF4444 0%, #F87171 100%);
}

.stat-card--danger .stat-card__label,
.stat-card--danger .stat-card__value {
  color: #FFFFFF;
}

.stat-card--info {
  background: linear-gradient(135deg, #3B82F6 0%, #60A5FA 100%);
}

.stat-card--info .stat-card__label,
.stat-card--info .stat-card__value {
  color: #FFFFFF;
}

/* 内容布局 */
.stat-card__content {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.stat-card__header {
  margin-bottom: 12rpx;
}

.stat-card__icon {
  font-size: 48rpx;
  line-height: 1;
}

.stat-card__body {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
}

.stat-card__label {
  font-size: 20rpx;
  line-height: 1.2;
  color: #6B7280;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.stat-card__value {
  font-size: 48rpx;
  font-weight: 600;
  line-height: 1.2;
  color: #111827;
}

/* 加载状态 */
.stat-card--loading {
  cursor: default;
}

.stat-card--loading:active {
  transform: none;
}

.stat-card__skeleton {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.skeleton {
  background: linear-gradient(90deg, #F3F4F6 25%, #E5E7EB 50%, #F3F4F6 75%);
  background-size: 200% 100%;
  border-radius: 8rpx;
  animation: skeleton-loading 1.5s infinite;
}

.skeleton--icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
  border-radius: 12rpx;
}

.skeleton--label {
  width: 120rpx;
  height: 24rpx;
  margin-bottom: 8rpx;
}

.skeleton--value {
  width: 160rpx;
  height: 48rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* 空状态 */
.stat-card--empty {
  cursor: default;
}

.stat-card--empty:active {
  transform: none;
}

.stat-card__empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  text-align: center;
}

.stat-card__empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.stat-card__empty-text {
  font-size: 20rpx;
  color: #9CA3AF;
  line-height: 1.5;
}
