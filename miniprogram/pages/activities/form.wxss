/* 活动发布页面样式 - 基于设计文档重构 */

/* 活动发布页面样式 - 使用全局 tokens */
/* Global tokens are now imported through app.wxss */
page {
  --input-height: 88rpx;
}

/* 页面整体布局 */
.activity-publish-page {
  min-height: 100vh;
  background: var(--gray-50);
  padding-bottom: 160rpx; /* 为底部操作栏预留空间 */
}

/* 顶部导航（参考首页） */
.nav-header {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--space-6);
  color: var(--text-on-primary);
  position: sticky;
  top: 0;
  z-index: 120;
  box-shadow: var(--shadow-md);
  margin: 0 calc(-1 * var(--space-6)) var(--space-6); /* 确保紧贴页面边缘 */
}
.nav-header--green { background: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-primary-700) 100%); }
.nav-header--blue { background: linear-gradient(135deg, var(--color-info-600) 0%, var(--role-social) 100%); }
.nav-header--purple { background: linear-gradient(135deg, var(--role-admin) 0%, var(--role-admin) 100%); }
.nav-header--orange { background: linear-gradient(135deg, var(--role-volunteer) 0%, var(--color-warning-600) 100%); }
.nav-header--pink { background: linear-gradient(135deg, var(--role-parent) 0%, var(--role-parent) 100%); }
.brand {
  font-size: var(--font-h1);
  font-weight: var(--weight-bold);
  letter-spacing: -0.5rpx;
}
.nav-actions { display:flex; align-items:center; gap: 12rpx; }
.draft-btn {
  background: var(--gray-200);
  color: var(--text-primary);
  border: none;
  border-radius: 24rpx;
  padding: 10rpx 20rpx;
  font-size: var(--font-h3);
}
.draft-btn:active { transform: scale(0.98); opacity: 0.95; }

/* 导航头部 */
/* 旧 header 已替换为 nav-header */

.header-left {
  display: flex;
  align-items: flex-start;
  gap: var(--space-4);
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-lg);
  color: var(--text-on-primary);
  transition: all 0.2s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.header-title {
  display: flex;
  flex-direction: column;
}

.title-text {
  font-size: var(--font-xl);
  font-weight: 600;
  color: var(--text-on-primary);
  line-height: 1.2;
}

.title-subtitle {
  font-size: var(--font-sm);
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
}

.header-right {
  display: flex;
  align-items: center;
  gap: var(--space-3);
}

.save-draft-btn {
  padding: var(--space-3) var(--space-4);
  background: rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-lg);
  font-size: var(--font-sm);
  color: var(--text-on-primary);
  transition: all 0.2s ease;
}

.save-draft-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.save-draft-btn.saving {
  opacity: 0.7;
}

.help-btn {
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-md);
  font-weight: 600;
  color: var(--text-on-primary);
  transition: all 0.2s ease;
}

.help-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

/* 表单进度指示器 */
.form-progress {
  background: var(--bg-primary);
  padding: var(--space-6);
  display: flex;
  align-items: center;
  gap: var(--space-4);
  border-bottom: 2rpx solid var(--gray-200);
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: var(--gray-300);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-info-600) 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: var(--font-caption);
  font-weight: var(--weight-medium);
  color: var(--text-secondary);
  min-width: 80rpx;
  text-align: right;
}

/* 大滚动框容器，将需填写部分包裹起来 */
.form-box {
  margin: var(--space-4);
  background: var(--bg-primary);
  border: 2rpx solid var(--gray-300);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}
.form-scroll {
  max-height: 70vh;
}

/* 表单内容区域 */
.form-content {
  padding: var(--space-6);
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

/* 表单区块 */
.form-section {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition: box-shadow 0.2s ease;
}

.form-section:hover {
  box-shadow: var(--shadow-md);
}

.section-header {
  background: linear-gradient(135deg, var(--gray-50) 0%, rgba(242, 242, 247, 0.8) 100%);
  padding: var(--space-6);
  display: flex;
  align-items: center;
  gap: var(--space-3);
  border-bottom: 2rpx solid var(--gray-300);
  position: relative;
}

.section-icon {
  font-size: var(--font-h2);
  width: 48rpx;
  height: 48rpx;
  background: var(--bg-subtle);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.section-title {
  font-size: var(--font-h2);
  font-weight: var(--weight-bold);
  color: var(--text-primary);
  flex: 1;
}

.required-mark {
  font-size: var(--font-body);
  color: var(--color-danger-600);
  font-weight: var(--weight-bold);
}

.toggle-icon {
  font-size: var(--font-caption);
  color: var(--gray-500);
  transition: transform 0.2s ease;
}

.toggle-icon.expanded {
  transform: rotate(180deg);
}

.section-content {
  padding: var(--space-8) var(--space-6) var(--space-6);
}

/* 表单项 */
.form-item {
  margin-bottom: var(--space-8);
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-item.error .form-input,
.form-item.error .form-textarea,
.form-item.error .picker-display {
  border-color: var(--color-danger-600);
  background: rgba(255, 59, 48, 0.05);
}

.form-label {
  font-size: var(--font-md);
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: var(--space-3);
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.form-label.required::after {
  content: "*";
  color: var(--color-danger-600);
  font-weight: 600;
}

/* 输入框样式 */
.form-input,
.form-textarea {
  width: 100%;
  padding: var(--space-4) var(--space-6);
  border: 2rpx solid var(--gray-300);
  border-radius: var(--radius-md);
  font-size: var(--font-md);
  color: var(--text-primary);
  background: var(--bg-primary);
  transition: all 0.2s ease;
  box-sizing: border-box;
}

/* 统一单行输入框高度为与“活动分类”一致 */
.form-input {
  height: var(--input-height);
}

/* 标题专用：更高更大，便于输入 */
/* 已统一高度，删除标题专用高度 */

.form-input:focus,
.form-textarea:focus {
  border-color: var(--color-primary-600);
  background: var(--bg-primary);
  box-shadow: 0 0 0 6rpx rgba(0, 122, 255, 0.08);
  outline: none;
}

.form-input::placeholder,
.form-textarea::placeholder {
  color: var(--gray-500);
}

.form-textarea {
  min-height: 120rpx;
  line-height: 1.5;
  resize: none;
}

/* 选择器样式 */
.picker-display {
  width: 100%;
  padding: var(--space-4) var(--space-6);
  border: 2rpx solid var(--gray-300);
  border-radius: var(--radius-md);
  background: var(--bg-primary);
  color: var(--text-primary);
  font-size: var(--font-md);
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.2s ease;
  box-sizing: border-box;
  min-height: var(--input-height);
}

.picker-display:active {
  background: var(--gray-50);
  border-color: var(--color-primary-600);
}

.picker-display.placeholder {
  color: var(--gray-500);
}

.picker-display.selected {
  color: var(--text-primary);
}

.picker-arrow {
  color: var(--gray-500);
  font-size: var(--font-sm);
  transition: transform 0.2s ease;
}

.picker-display:active .picker-arrow {
  transform: rotate(180deg);
}

/* 字符计数 */
.char-count {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 20rpx;
  color: var(--gray-500);
  background: var(--bg-primary);
  padding: 4rpx 8rpx;
  border-radius: 0 var(--radius-md) 0 8rpx;
  transform: translateY(-50%);
  z-index: 2;
}

/* 错误提示 */
.error-text {
  color: var(--color-danger-600);
  font-size: var(--font-sm);
  margin-top: var(--space-2);
  display: block;
  animation: errorSlideIn 0.2s ease;
}

@keyframes errorSlideIn {
  from {
    opacity: 0;
    transform: translateY(-8rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 表单提示 */
.form-hint {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  margin-top: var(--space-2);
  line-height: 1.4;
}

/* 日期时间选择器 */
.datetime-picker {
  display: flex;
  align-items: center;
  gap: var(--space-4);
}

.date-input,
.time-input {
  flex: 1;
  padding: var(--space-4) var(--space-6);
  border: 2rpx solid var(--gray-300);
  border-radius: var(--radius-md);
  background: var(--bg-primary);
  color: var(--text-primary);
  font-size: var(--font-md);
  text-align: center;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.date-input:active,
.time-input:active {
  background: var(--gray-50);
  border-color: var(--color-primary-600);
}

.date-input.placeholder,
.time-input.placeholder {
  color: var(--gray-500);
}

.date-input.selected,
.time-input.selected {
  color: var(--text-primary);
}

.date-input.small,
.time-input.small {
  flex: none;
  min-width: 160rpx;
}

.datetime-separator {
  color: var(--gray-500);
  font-weight: 500;
  font-size: var(--font-md);
}

/* 单选组 */
.radio-group {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.radio-item {
  display: flex;
  align-items: flex-start;
  gap: var(--space-4);
  padding: var(--space-6);
  border: 2rpx solid var(--gray-300);
  border-radius: var(--radius-md);
  background: var(--bg-primary);
  transition: all 0.2s ease;
}

.radio-item:active {
  background: var(--gray-50);
  transform: scale(0.98);
}

.radio-item.checked {
  border-color: var(--color-primary-600);
  background: var(--bg-subtle);
}

.radio-icon {
  font-size: var(--font-lg);
  color: var(--color-primary-600);
  line-height: 1;
  margin-top: 2rpx;
}

.radio-label {
  font-size: var(--font-md);
  font-weight: 500;
  color: var(--text-primary);
  flex: 1;
}

.radio-desc {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  margin-top: 4rpx;
  display: block;
}

/* 开关组件 */
.switch-item {
  display: flex;
  align-items: flex-start;
  gap: var(--space-4);
  padding: var(--space-6);
  background: var(--gray-50);
  border-radius: var(--radius-md);
}

.switch-label {
  font-size: var(--font-md);
  color: var(--text-primary);
  line-height: 1.4;
  flex: 1;
}

/* 标签选择器 */
.tag-selector {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-4);
  margin-top: var(--space-3);
}

.tag-option {
  padding: var(--space-3) var(--space-4);
  border: 2rpx solid var(--gray-500);
  border-radius: var(--radius-lg);
  background: var(--bg-primary);
  color: var(--text-secondary);
  font-size: var(--font-sm);
  font-weight: 500;
  transition: all 0.2s ease;
  white-space: nowrap;
}

.tag-option:active {
  transform: scale(0.95);
}

.tag-option.selected {
  background: var(--color-primary-600);
  border-color: var(--color-primary-600);
  color: var(--text-on-primary);
}

/* 封面上传 */
.cover-upload {
  margin-top: var(--space-3);
}

.cover-preview {
  width: 100%;
  height: 300rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
  position: relative;
  border: 2rpx solid var(--gray-300);
}

.cover-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-remove {
  position: absolute;
  top: var(--space-3);
  right: var(--space-3);
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.2s ease;
}

.cover-remove:active {
  background: rgba(0, 0, 0, 0.7);
  transform: scale(0.9);
}

.remove-icon {
  color: var(--text-on-primary);
  font-size: var(--font-sm);
  font-weight: 600;
}

.upload-placeholder {
  width: 100%;
  height: 200rpx;
  border: 4rpx dashed var(--gray-500);
  border-radius: var(--radius-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--space-3);
  background: var(--gray-50);
  transition: all 0.2s ease;
}

.upload-placeholder:active {
  background: var(--gray-300);
  border-color: var(--color-primary-600);
}

.upload-icon {
  font-size: 48rpx;
  color: var(--gray-500);
}

.upload-text {
  font-size: var(--font-md);
  color: var(--text-secondary);
}

/* 报名时间设置 */
.registration-time {
  margin-top: var(--space-3);
}

.time-row {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  margin-bottom: var(--space-4);
}

.time-row:last-child {
  margin-bottom: 0;
}

.time-label {
  font-size: var(--font-md);
  color: var(--text-secondary);
  min-width: 64rpx;
  font-weight: 500;
}

/* 发布设置区块 */
.publish-section .section-content {
  background: linear-gradient(135deg, var(--bg-subtle) 0%, rgba(227, 242, 255, 0.5) 100%);
}

.publish-info {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.publish-status {
  font-size: var(--font-md);
  font-weight: 600;
  color: var(--color-primary-600);
}

.publish-hint {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  line-height: 1.4;
}

/* 高级设置区块 */
.advanced-section .section-header {
  cursor: pointer;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--bg-primary);
  padding: var(--space-6);
  border-top: 2rpx solid var(--gray-300);
  display: flex;
  gap: var(--space-4);
  z-index: 100;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  font-size: var(--font-md);
  font-weight: 500;
  transition: all 0.2s ease;
  box-shadow: var(--shadow-sm);
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn.secondary {
  background: var(--gray-50);
  color: var(--text-primary);
  border: 2rpx solid var(--gray-500);
}

.action-btn.secondary:active {
  background: var(--gray-300);
}

.action-btn.primary {
  background: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-info-600) 100%);
  color: var(--text-on-primary);
}

.action-btn.primary:active {
  background: linear-gradient(135deg, var(--color-primary-700) 0%, var(--color-info-600) 100%);
}

.action-btn.primary.publish {
  background: linear-gradient(135deg, var(--color-success-600) 0%, var(--color-primary-700) 100%);
}

.btn-icon {
  font-size: var(--font-md);
}

.btn-text {
  font-weight: 600;
}

/* 加载状态 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--gray-50);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-6);
  padding: var(--space-8);
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-lg);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid var(--gray-300);
  border-top: 6rpx solid var(--color-primary-600);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: var(--font-md);
  color: var(--text-secondary);
}

/* 弹窗样式 */
.preview-modal,
.help-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 300;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.preview-modal.show,
.help-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
  box-shadow: var(--shadow-lg);
}

.preview-modal.show .modal-content,
.help-modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  padding: var(--space-8) var(--space-6) var(--space-6);
  border-bottom: 2rpx solid var(--gray-300);
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: var(--gray-50);
}

.modal-title {
  font-size: var(--font-lg);
  font-weight: 600;
  color: var(--text-primary);
}

.modal-close {
  width: 64rpx;
  height: 64rpx;
  background: var(--gray-300);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-md);
  color: var(--text-secondary);
  transition: all 0.2s ease;
}

.modal-close:active {
  background: var(--gray-500);
  transform: scale(0.9);
}

.modal-body {
  max-height: 60vh;
  overflow-y: auto;
}

/* 预览内容 */
.preview-content {
  padding: var(--space-6);
}

.preview-cover {
  width: 100%;
  height: 200rpx;
  border-radius: var(--radius-md);
  margin-bottom: var(--space-6);
  object-fit: cover;
}

.preview-info {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.preview-title {
  font-size: var(--font-xl);
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.3;
}

.preview-category {
  font-size: var(--font-sm);
  color: var(--color-primary-600);
  background: var(--bg-subtle);
  padding: 4rpx var(--space-3);
  border-radius: var(--radius-sm);
  align-self: flex-start;
}

.preview-details {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
  padding: var(--space-6);
  background: var(--gray-50);
  border-radius: var(--radius-md);
}

.preview-item {
  display: flex;
  align-items: center;
  gap: var(--space-3);
}

.item-icon {
  font-size: var(--font-md);
  color: var(--gray-500);
}

.item-text {
  font-size: var(--font-md);
  color: var(--text-primary);
}

.preview-description {
  font-size: var(--font-md);
  color: var(--text-primary);
  line-height: 1.5;
  padding: var(--space-6);
  background: var(--gray-50);
  border-radius: var(--radius-md);
}

.preview-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-3);
}

.tag-item {
  padding: 4rpx var(--space-3);
  background: var(--color-primary-600);
  color: var(--text-on-primary);
  font-size: var(--font-sm);
  border-radius: var(--radius-sm);
}

/* 帮助内容 */
.help-content {
  padding: var(--space-6);
}

.help-section {
  margin-bottom: var(--space-8);
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.help-section:last-child {
  margin-bottom: 0;
}

.help-title {
  font-size: var(--font-lg);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--space-4);
}

.help-text {
  font-size: var(--font-md);
  color: var(--text-secondary);
  line-height: 1.4;
  padding-left: var(--space-6);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .form-content {
    padding: var(--space-4);
  }
  
  .section-content {
    padding: var(--space-6) var(--space-4) var(--space-4);
  }
  
  .datetime-picker {
    flex-direction: column;
    align-items: stretch;
  }
  
  .datetime-separator {
    display: none;
  }
  
  .bottom-actions {
    padding: var(--space-4);
    flex-wrap: wrap;
  }
  
  .action-btn {
    min-width: calc(50% - var(--space-2));
  }
}

@media (min-width: 414px) {
  .form-content {
    max-width: 800rpx;
    margin: 0 auto;
    padding: var(--space-8);
  }
  
  .modal-content {
    max-width: 700rpx;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-section {
  animation: fadeInUp 0.3s ease forwards;
}

.form-section:nth-child(2) { animation-delay: 0.1s; }
.form-section:nth-child(3) { animation-delay: 0.2s; }
.form-section:nth-child(4) { animation-delay: 0.3s; }
.form-section:nth-child(5) { animation-delay: 0.4s; }
