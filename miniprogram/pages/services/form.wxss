.page { padding: 24rpx; }
.upload-bar { display:flex; align-items:center; gap: 12rpx; margin-bottom: 12rpx; }
.upload-bar .bar { flex:1; height: 16rpx; background:#E5E7EB; border-radius: 8rpx; overflow:hidden; }
.upload-bar .progress { height: 100%; background:#22C55E; }
.upload-bar .pct { color:#374151; font-size: 18rpx; }
.mode { margin-bottom: 16rpx; }
.mode-row { display:flex; align-items:center; gap: 12rpx; }
.mode-chip { padding: 6rpx 12rpx; border:2rpx solid #D1D5DB; border-radius: 16rpx; color:#6B7280; }
.mode-chip.active { border-color:#22C55E; color:#111827; }
.spacer { flex:1; }
.section { margin-bottom: 24rpx; }
.label { display:block; font-size: 20rpx; color:#374151; margin-bottom: 8rpx; }
.input, .picker { height: 88rpx; line-height: 88rpx; padding: 0 24rpx; border: 2rpx solid #D1D5DB; border-radius: 12rpx; }
.textarea { min-height: 160rpx; padding: 16rpx 24rpx; border: 2rpx solid #D1D5DB; border-radius: 12rpx; }
.seg { display:flex; flex-wrap: wrap; gap: 16rpx; }
.seg-item { padding: 12rpx 16rpx; border: 2rpx solid #D1D5DB; border-radius: 12rpx; }
.grid { display: flex; flex-wrap: wrap; gap: 12rpx; }
.thumb { width: 212rpx; height: 212rpx; border:2rpx solid #D1D5DB; border-radius: 12rpx; position: relative; overflow: hidden; display:flex; align-items:center; justify-content:center; }
.thumb image { width: 100%; height: 100%; }
.thumb .del { position:absolute; top:4rpx; right:8rpx; color:#fff; background:#EF4444; border-radius: 50%; width: 32rpx; height: 32rpx; text-align:center; line-height: 32rpx; }
.thumb.add { color:#6B7280; background:#F3F4F6; font-size: 48rpx; }
.error { margin-top: 8rpx; color:#EF4444; font-size: 18rpx; }
.submit { height: 80rpx; background:#22C55E; color:#fff; border-radius: 16rpx; }
