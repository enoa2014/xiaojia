/* 导入设计令牌 */
@import "../../styles/tokens.wxss";

/* 页面基础样式 - 移除重复的 .page 和 .nav-header 样式，现已统一到 app.wxss */
.page {
  padding-bottom: var(--tabbar-height);
}

/* 移除重复的导航头子元素样式，现已统一到 app.wxss */

.nav-tool {
  width: var(--size-lg);
  height: var(--size-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-md);
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  transition: var(--transition-base);
}

.nav-tool:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.nav-icon {
  font-size: var(--font-xl);
}

/* 统计卡片区 */
.stats-section {
  padding: 24rpx;
  margin-bottom: 8rpx;
}

.stats-card {
  background: white;
  border-radius: var(--radius-xl);
  padding: 32rpx 24rpx;
  box-shadow: var(--shadow-lg);
  border: 2rpx solid var(--color-gray-100);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-gray-900);
}

.stats-period {
  font-size: 24rpx;
  color: var(--color-gray-500);
  background: var(--color-gray-100);
  padding: 8rpx 16rpx;
  border-radius: var(--radius-md);
}

.stats-content {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.stat-item {
  text-align: center;
  padding: 16rpx 8rpx;
  background: var(--color-gray-50);
  border-radius: var(--radius-md);
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.stat-item:active {
  border-color: var(--color-primary);
  background: var(--color-primary-light);
}

.stat-number {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-primary);
  line-height: 1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 20rpx;
  color: var(--color-gray-600);
}

/* 快速记录区 */
.quick-section {
  margin: 24rpx;
  margin-bottom: 32rpx;
}

.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-gray-900);
}

.section-subtitle {
  font-size: 24rpx;
  color: var(--color-gray-500);
  margin-left: 16rpx;
}

.quick-actions {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 16rpx;
}

.quick-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
  background: white;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  border: 2rpx solid var(--color-gray-100);
  transition: all 0.2s ease;
}

.quick-btn:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-md);
  border-color: var(--color-primary);
}

.quick-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.quick-text {
  font-size: 20rpx;
  color: var(--color-gray-700);
  text-align: center;
  line-height: 1.2;
}

/* 筛选控制区 */
.filter-section {
  margin: 24rpx 24rpx 16rpx;
}

.filter-tabs {
  display: flex;
  gap: 8rpx;
  margin-bottom: 16rpx;
  padding: 8rpx;
  background: white;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.filter-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  border-radius: var(--radius-md);
  transition: all 0.2s ease;
  min-height: 80rpx;
  justify-content: center;
}

.filter-tab.active {
  background: var(--color-primary);
  color: white;
}

.filter-tab:not(.active) {
  background: var(--color-gray-50);
  color: var(--color-gray-600);
}

.tab-text {
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.tab-count {
  font-size: 18rpx;
  opacity: 0.8;
  background: rgba(255, 255, 255, 0.2);
  padding: 2rpx 8rpx;
  border-radius: var(--radius-sm);
}

.filter-tab:not(.active) .tab-count {
  background: var(--color-gray-200);
  color: var(--color-gray-600);
}

.filter-controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.type-chips {
  flex: 1;
  white-space: nowrap;
}

.type-chip {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  margin-right: 12rpx;
  padding: 12rpx 16rpx;
  background: white;
  border: 2rpx solid var(--color-gray-200);
  border-radius: var(--radius-lg);
  transition: all 0.2s ease;
  box-shadow: var(--shadow-sm);
}

.type-chip.active {
  border-color: var(--color-primary);
  background: var(--color-primary-light);
  color: var(--color-primary-dark);
}

.type-chip:not(.active) {
  color: var(--color-gray-600);
}

.chip-icon {
  font-size: 24rpx;
}

.chip-text {
  font-size: 22rpx;
  font-weight: 500;
}

.toggle-section {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: white;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  border: 2rpx solid var(--color-gray-100);
}

.mine-toggle {
  transform: scale(0.8);
}

.toggle-text {
  font-size: 24rpx;
  color: var(--color-gray-700);
}

/* 服务记录列表 */
.records-section {
  margin: 24rpx;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  background: white;
  border-radius: var(--radius-xl);
  padding: 24rpx;
  box-shadow: var(--shadow-md);
  border: 2rpx solid var(--color-gray-100);
  transition: all 0.2s ease;
}

.record-item:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-lg);
  border-color: var(--color-primary);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.service-type-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: var(--radius-lg);
  color: white;
  font-weight: 500;
}

.type-icon {
  font-size: 20rpx;
}

.type-name {
  font-size: 22rpx;
}

.record-status {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 12rpx;
  border-radius: var(--radius-md);
  font-size: 20rpx;
  font-weight: 500;
}

.status-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
}

.status-pending {
  background: #FEF3C7;
  color: #92400E;
}

.status-pending .status-dot {
  background: #F59E0B;
}

.status-approved {
  background: var(--color-primary-light);
  color: var(--color-primary-dark);
}

.status-approved .status-dot {
  background: var(--color-primary);
}

.status-rejected {
  background: #FEE2E2;
  color: #991B1B;
}

.status-rejected .status-dot {
  background: var(--color-error);
}

.record-content {
  margin-bottom: 16rpx;
}

.record-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-gray-900);
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.record-description {
  font-size: 24rpx;
  color: var(--color-gray-600);
  line-height: 1.5;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.record-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.meta-icon {
  font-size: 18rpx;
  opacity: 0.7;
}

.meta-text {
  font-size: 20rpx;
  color: var(--color-gray-500);
}

.record-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.record-tag {
  padding: 4rpx 12rpx;
  background: var(--color-gray-100);
  color: var(--color-gray-600);
  border-radius: var(--radius-md);
  font-size: 18rpx;
  font-weight: 500;
}

.record-actions {
  display: flex;
  gap: 12rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid var(--color-gray-100);
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 12rpx 16rpx;
  border-radius: var(--radius-md);
  font-size: 22rpx;
  font-weight: 500;
  border: 2rpx solid;
  background: white;
  transition: all 0.2s ease;
  min-width: 120rpx;
  justify-content: center;
}

.approve-btn {
  border-color: var(--color-success);
  color: var(--color-success);
}

.approve-btn:active {
  background: #DCFCE7;
}

.reject-btn {
  border-color: var(--color-error);
  color: var(--color-error);
}

.reject-btn:active {
  background: #FEE2E2;
}

.detail-btn {
  border-color: var(--color-gray-300);
  color: var(--color-gray-600);
}

.detail-btn:active {
  background: var(--color-gray-50);
}

.btn-icon {
  font-size: 18rpx;
}

.btn-text {
  font-size: 22rpx;
}

/* 加载更多 */
.load-more {
  margin: 32rpx 0;
  padding: 24rpx;
  text-align: center;
  background: white;
  border-radius: var(--radius-lg);
  border: 2rpx solid var(--color-gray-200);
  transition: all 0.2s ease;
}

.load-more:active {
  background: var(--color-gray-50);
  border-color: var(--color-primary);
}

.load-text {
  font-size: 24rpx;
  color: var(--color-gray-600);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 24rpx;
  background: white;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
  margin: 24rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-gray-700);
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: var(--color-gray-500);
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.empty-action {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 32rpx;
  background: var(--color-primary);
  color: white;
  border-radius: var(--radius-lg);
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  box-shadow: var(--shadow-md);
  transition: all 0.2s ease;
}

.empty-action:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-lg);
}

/* 浮动操作按钮 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 160rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background: linear-gradient(135deg, var(--color-primary) 0%, #16A34A 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 32rpx rgba(34, 197, 94, 0.3);
  border: none;
  transition: all 0.3s ease;
  z-index: 1000;
}

.fab:active {
  transform: scale(0.9);
  box-shadow: 0 8rpx 16rpx rgba(34, 197, 94, 0.4);
}

.fab-icon {
  font-size: 48rpx;
  font-weight: 600;
}

/* 加载状态 */
.loading-container {
  min-height: 100vh;
  background: var(--color-gray-50);
  padding: 24rpx;
}

.loading-header .skeleton-nav {
  height: 88rpx;
  background: linear-gradient(90deg, #e2e8f0 25%, #f1f5f9 50%, #e2e8f0 75%);
  background-size: 200% 100%;
  animation: skeleton 1.5s infinite;
  border-radius: var(--radius-md);
  margin-bottom: 24rpx;
}

.skeleton-stats .skeleton-card {
  background: white;
  border-radius: var(--radius-xl);
  padding: 32rpx 24rpx;
}

.skeleton-line {
  height: 24rpx;
  background: linear-gradient(90deg, #e2e8f0 25%, #f1f5f9 50%, #e2e8f0 75%);
  background-size: 200% 100%;
  animation: skeleton 1.5s infinite;
  border-radius: var(--radius-sm);
  margin-bottom: 12rpx;
}

.skeleton-line.long { width: 70%; }
.skeleton-line.medium { width: 50%; }
.skeleton-line.short { width: 30%; }
.skeleton-line.tiny { width: 20%; }

.skeleton-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-top: 24rpx;
}

.skeleton-stat {
  text-align: center;
  padding: 16rpx;
}

.skeleton-section {
  margin: 32rpx 0;
  background: white;
  padding: 24rpx;
  border-radius: var(--radius-xl);
}

.skeleton-actions {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 16rpx;
  margin-top: 16rpx;
}

.skeleton-action {
  height: 80rpx;
  background: linear-gradient(90deg, #e2e8f0 25%, #f1f5f9 50%, #e2e8f0 75%);
  background-size: 200% 100%;
  animation: skeleton 1.5s infinite;
  border-radius: var(--radius-lg);
}

.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.skeleton-record {
  background: white;
  border-radius: var(--radius-xl);
  padding: 24rpx;
}

.skeleton-record-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.skeleton-record-content {
  margin-top: 12rpx;
}

/* 错误状态 */
.error-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-gray-50);
  padding: 24rpx;
}

.error-content {
  text-align: center;
  background: white;
  padding: 60rpx 40rpx;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-lg);
  max-width: 600rpx;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.error-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-gray-800);
  margin-bottom: 12rpx;
}

.error-message {
  font-size: 26rpx;
  color: var(--color-gray-600);
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.error-retry {
  padding: 16rpx 32rpx;
  background: var(--color-primary);
  color: white;
  border-radius: var(--radius-lg);
  font-size: 26rpx;
  border: none;
  box-shadow: var(--shadow-md);
  transition: all 0.2s ease;
}

.error-retry:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-lg);
}

@keyframes skeleton {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}
