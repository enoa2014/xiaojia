.page { padding: 12rpx 12rpx 120rpx; }
.tabs { display:flex; align-items:center; gap: 12rpx; padding: 8rpx 0; }
.tab { padding: 8rpx 12rpx; border:2rpx solid #D1D5DB; border-radius: 16rpx; color:#6B7280; }
.tab.active { border-color:#22C55E; color:#111827; }
.mine { margin-left:auto; }
.mine-text { color:#6B7280; font-size: 18rpx; }
.chips { display:flex; gap: 12rpx; padding: 8rpx 0; white-space:nowrap; }
.chip { display:inline-block; margin-right: 12rpx; padding: 6rpx 12rpx; border:2rpx solid #D1D5DB; border-radius: 16rpx; color:#6B7280; }
.chip.active { border-color:#22C55E; color:#111827; }
.item { display:flex; align-items:flex-start; gap: 12rpx; padding: 16rpx 8rpx; border-bottom:2rpx solid #F3F4F6; }
.type { width: 80rpx; text-align:center; color:#059669; font-weight:600; }
.content { flex:1; }
.line1 { color:#111827; font-size: 20rpx; margin-bottom: 6rpx; overflow:hidden; text-overflow:ellipsis; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; }
.meta { color:#6B7280; font-size: 18rpx; }
.status { padding: 2rpx 8rpx; border-radius: 12rpx; font-size: 18rpx; }
.status-review { background:#FEF3C7; color:#92400E; }
.status-approved { background:#DCFCE7; color:#065F46; }
.status-rejected { background:#FEE2E2; color:#991B1B; }
.review-actions { display:flex; gap: 8rpx; margin-top: 8rpx; }
.btn.ok { border-color:#22C55E; color:#065F46; }
.btn.no { border-color:#EF4444; color:#991B1B; }
.empty { text-align:center; color:#9CA3AF; padding: 40rpx 0; }
.fab { position: fixed; right: 24rpx; bottom: 120rpx; width: 96rpx; height:96rpx; border-radius:48rpx; background:#22C55E; color:#fff; display:flex; align-items:center; justify-content:center; font-size: 36rpx; box-shadow: 0 8rpx 24rpx rgba(34,197,94,.3); }
