/* Button 演示页面样式 */

.page {
  padding-bottom: 100rpx;
}

.nav-header {
  background: linear-gradient(135deg, var(--color-primary-600), var(--color-primary-700));
  color: var(--text-on-primary);
  padding: var(--space-6) var(--space-4);
  margin-bottom: var(--space-6);
}

.brand {
  font-size: var(--font-lg);
  font-weight: var(--weight-semibold);
  text-align: center;
}

.demo-section {
  margin-bottom: var(--space-8);
  padding: 0 var(--space-4);
}

.section-title {
  font-size: var(--font-md);
  font-weight: var(--weight-semibold);
  color: var(--text-primary);
  margin-bottom: var(--space-4);
  padding-left: var(--space-2);
  border-left: 4rpx solid var(--color-primary-600);
}

.demo-grid {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.demo-item {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.demo-label {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  font-weight: var(--weight-medium);
}

.demo-actions {
  display: flex;
  gap: var(--space-3);
  align-items: center;
  flex-wrap: wrap;
}

.feedback-text {
  padding: var(--space-4);
  background: var(--gray-50);
  border: 2rpx solid var(--gray-200);
  border-radius: var(--radius-md);
  color: var(--text-secondary);
  font-size: var(--font-sm);
  text-align: center;
}

/* 尺寸对比辅助视觉 */
.demo-item:nth-child(4) {
  position: relative;
}

.demo-item:nth-child(4)::after {
  content: '88rpx基准线';
  position: absolute;
  left: 300rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20rpx;
  color: var(--gray-400);
  border-left: 2rpx dashed var(--gray-300);
  padding-left: var(--space-2);
  height: 88rpx;
  display: flex;
  align-items: center;
}

/* 响应式调整 */
@media screen and (max-width: 750rpx) {
  .demo-actions {
    flex-direction: column;
    align-items: stretch;
  }
  
  .demo-actions .ui-button {
    width: 100%;
  }
}