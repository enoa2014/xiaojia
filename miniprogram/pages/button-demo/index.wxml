<view class="page">
  <view class="nav-header">
    <view class="brand">🎨 Button 组件演示</view>
  </view>

  <!-- 基础变体 -->
  <view class="demo-section">
    <view class="section-title">基础变体</view>
    <view class="demo-grid">
      <view class="demo-item">
        <text class="demo-label">Primary</text>
        <ui-button text="主要按钮" variant="primary" size="md" bindtap="onButtonTap" />
      </view>
      <view class="demo-item">
        <text class="demo-label">Secondary</text>
        <ui-button text="次要按钮" variant="secondary" size="md" bindtap="onButtonTap" />
      </view>
      <view class="demo-item">
        <text class="demo-label">Ghost</text>
        <ui-button text="幽灵按钮" variant="ghost" size="md" bindtap="onButtonTap" />
      </view>
      <view class="demo-item">
        <text class="demo-label">Danger</text>
        <ui-button text="危险按钮" variant="danger" size="md" bindtap="onButtonTap" />
      </view>
    </view>
  </view>

  <!-- 按钮尺寸 -->
  <view class="demo-section">
    <view class="section-title">按钮尺寸</view>
    <view class="demo-grid">
      <view class="demo-item">
        <text class="demo-label">Large (96rpx) - 无障碍增强</text>
        <ui-button text="大按钮" variant="primary" size="lg" bindtap="onButtonTap" />
      </view>
      <view class="demo-item">
        <text class="demo-label">Medium (80rpx)</text>
        <ui-button text="中等按钮" variant="primary" size="md" bindtap="onButtonTap" />
      </view>
      <view class="demo-item">
        <text class="demo-label">Small (64rpx)</text>
        <ui-button text="小按钮" variant="primary" size="sm" bindtap="onButtonTap" />
      </view>
      <view class="demo-item">
        <text class="demo-label">触达增强 (≥88rpx)</text>
        <ui-button text="增强按钮" variant="secondary" size="sm" touchEnhanced="{{true}}" bindtap="onButtonTap" />
      </view>
    </view>
  </view>

  <!-- 按钮状态 -->
  <view class="demo-section">
    <view class="section-title">按钮状态</view>
    <view class="demo-grid">
      <view class="demo-item">
        <text class="demo-label">Default</text>
        <ui-button text="默认状态" variant="primary" size="md" bindtap="onButtonTap" />
      </view>
      <view class="demo-item">
        <text class="demo-label">Disabled</text>
        <ui-button text="禁用状态" variant="primary" size="md" disabled="{{true}}" />
      </view>
      <view class="demo-item">
        <text class="demo-label">Loading</text>
        <ui-button text="加载状态" variant="primary" size="md" loading="{{true}}" />
      </view>
    </view>
  </view>

  <!-- 带图标按钮 -->
  <view class="demo-section">
    <view class="section-title">带图标按钮</view>
    <view class="demo-grid">
      <view class="demo-item">
        <text class="demo-label">左侧图标</text>
        <ui-button text="保存" variant="primary" size="md" icon="💾" bindtap="onButtonTap" />
      </view>
      <view class="demo-item">
        <text class="demo-label">右侧图标</text>
        <ui-button text="下一步" variant="secondary" size="md" iconRight="→" bindtap="onButtonTap" />
      </view>
      <view class="demo-item">
        <text class="demo-label">仅图标</text>
        <ui-button text="⚙️" variant="ghost" size="md" bindtap="onButtonTap" />
      </view>
    </view>
  </view>

  <!-- 特殊样式 -->
  <view class="demo-section">
    <view class="section-title">特殊样式</view>
    <view class="demo-grid">
      <view class="demo-item">
        <text class="demo-label">全宽按钮</text>
        <ui-button text="全宽按钮" variant="primary" size="md" fullWidth="{{true}}" bindtap="onButtonTap" />
      </view>
      <view class="demo-item">
        <text class="demo-label">圆形按钮</text>
        <ui-button text="+" variant="primary" size="md" round="{{true}}" bindtap="onButtonTap" />
      </view>
    </view>
  </view>

  <!-- 组合演示 -->
  <view class="demo-section">
    <view class="section-title">组合演示</view>
    <view class="demo-actions">
      <ui-button text="取消" variant="ghost" size="md" bindtap="onButtonTap" />
      <ui-button text="保存草稿" variant="secondary" size="md" icon="💾" bindtap="onButtonTap" />
      <ui-button text="提交" variant="primary" size="md" icon="✅" loading="{{submitting}}" bindtap="onSubmit" />
    </view>
  </view>

  <!-- 危险操作二次确认 -->
  <view class="demo-section">
    <view class="section-title">危险操作二次确认</view>
    <view class="demo-grid">
      <view class="demo-item">
        <text class="demo-label">删除操作 - 带二次确认</text>
        <ui-button 
          text="删除数据" 
          variant="danger" 
          size="md" 
          icon="🗑️"
          bindtap="onDangerousAction"
          ariaLabel="删除数据，将显示确认对话框" />
      </view>
      <view class="demo-item">
        <text class="demo-label">重置操作 - 带二次确认</text>
        <ui-button 
          text="重置设置" 
          variant="danger" 
          size="md" 
          icon="🔄"
          bindtap="onResetAction"
          ariaLabel="重置所有设置，将显示确认对话框" />
      </view>
    </view>
  </view>

  <!-- 无障碍演示 -->
  <view class="demo-section">
    <view class="section-title">无障碍访问</view>
    <view class="demo-grid">
      <view class="demo-item">
        <text class="demo-label">带标签</text>
        <ui-button 
          text="删除" 
          variant="danger" 
          size="md" 
          icon="🗑️"
          ariaLabel="删除选中的项目"
          bindtap="onButtonTap" />
      </view>
      <view class="demo-item">
        <text class="demo-label">禁用可识别</text>
        <ui-button 
          text="提交" 
          variant="primary" 
          size="md" 
          disabled="{{true}}"
          ariaLabel="表单验证失败，按钮暂时不可用" />
      </view>
    </view>
  </view>

  <!-- 操作反馈 -->
  <view class="demo-section" wx:if="{{lastAction}}">
    <view class="section-title">最后操作</view>
    <view class="feedback-text">{{lastAction}}</view>
  </view>
</view>