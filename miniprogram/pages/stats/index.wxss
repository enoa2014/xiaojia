/* 全局样式 - 移除重复的 .page 和 .nav-header 样式，现已统一到 app.wxss */
.page { 
  padding-bottom: 120rpx;
}

/* 移除重复的导航头子元素样式，现已统一到 app.wxss */

.nav-notif {
  background: rgba(255,255,255,0.2);
  color: var(--text-on-primary);
  padding: var(--space-1) var(--space-3);
  border-radius: 999rpx;
  font-size: var(--font-body);
  font-weight: var(--weight-bold);
}

.nav-refresh, .nav-export {
  font-size: var(--font-h1);
  padding: var(--space-2);
  opacity: 0.9;
}

/* 用户状态区 */
.user-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  margin-bottom: 20rpx;
  box-shadow: var(--shadow-sm);
}

.role-badge {
  background: linear-gradient(135deg, var(--color-info-600), var(--role-social));
  color: var(--text-on-primary);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.role-admin { background: linear-gradient(135deg, var(--color-danger-600), var(--color-danger-600)); }
.role-social_worker { background: linear-gradient(135deg, var(--color-primary-600), var(--color-primary-700)); }

.perm-status {
  color: var(--gray-500);
  font-size: 20rpx;
  margin-top: 8rpx;
  display: block;
}

.time-info {
  color: var(--gray-500);
  font-size: 24rpx;
}

/* 时间选择器 */
.time-selector {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.time-tabs {
  display: flex;
  background: var(--gray-50);
  border-radius: 12rpx;
  padding: 6rpx;
  margin-bottom: 16rpx;
}

.time-tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 16rpx;
  color: var(--gray-500);
  font-size: 24rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.time-tab.active {
  background: linear-gradient(135deg, var(--color-primary-600), var(--color-primary-700));
  color: var(--text-on-primary);
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(34, 197, 94, 0.3);
}

.custom-date {
  color: var(--color-info-600);
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  padding: 8rpx;
}

/* 权限提示 */
.no-perm {
  background: linear-gradient(135deg, var(--bg-subtle), var(--bg-subtle));
  color: var(--color-warning-600);
  padding: var(--space-6);
  border-radius: var(--radius-lg);
  text-align: center;
  margin: 20rpx 0;
  font-weight: 500;
}

/* 通用区域标题 */
.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* KPI指标卡片 - 使用 StatCard 组件 */
.kpi-section {
  margin-bottom: var(--space-6);
}

.kpi-scroll {
  width: 100%;
}

.kpi-container {
  display: flex;
  gap: var(--space-4);
  padding-bottom: 8rpx;
}

.kpi-card-wrapper {
  min-width: 280rpx;
  flex-shrink: 0;
}

/* 分析区域 */
.analysis-section {
  margin-bottom: var(--space-6);
}

.quick-stats {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-top: 16rpx;
}

.stat-item-card {
  width: 100%;
}

/* 图表控制器 - 适配 chart-container 组件 */
.chart-controls {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.scope-tag {
  padding: 6rpx 16rpx;
  background: var(--gray-50);
  color: var(--gray-500);
  border-radius: 20rpx;
  font-size: 22rpx;
  transition: all 0.3s ease;
}

.scope-tag.active {
  background: linear-gradient(135deg, var(--color-primary-600), var(--color-primary-700));
  color: var(--text-on-primary);
}

.chart-body {
  display: flex;
  align-items: flex-end;
  gap: 12rpx;
  height: 300rpx;
  overflow-x: auto;
  padding: 16rpx 0;
}

.chart-bar {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 60rpx;
  height: 100%;
}

.bar-label {
  color: var(--gray-500);
  font-size: 20rpx;
  margin-bottom: 8rpx;
  white-space: nowrap;
  writing-mode: vertical-lr;
  text-orientation: mixed;
  transform: rotate(180deg);
  height: 60rpx;
  line-height: 1.2;
}

.bar-track {
  flex: 1;
  width: 32rpx;
  background: var(--gray-200);
  border-radius: var(--radius-lg);
  position: relative;
  display: flex;
  align-items: flex-end;
  margin-bottom: 8rpx;
}

.bar-fill {
  width: 100%;
  background: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-primary-700) 100%);
  border-radius: var(--radius-lg);
  min-height: 8rpx;
  position: relative;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  transition: height 0.6s ease-out;
}

.bar-value {
  position: absolute;
  top: -24rpx;
  color: var(--text-primary);
  font-size: 18rpx;
  font-weight: 600;
  white-space: nowrap;
}

/* 空状态 */
.empty-chart {
  text-align: center;
  padding: 80rpx 24rpx;
  color: var(--gray-500);
}

.empty-icon {
  font-size: 64rpx;
  display: block;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 22rpx;
  opacity: 0.8;
  display: block;
}

/* 错误和加载状态 */
.error-state {
  background: linear-gradient(135deg, var(--bg-subtle), var(--bg-subtle));
  border-radius: var(--radius-lg);
  padding: 32rpx;
  text-align: center;
  margin: 20rpx 0;
}

.error-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 16rpx;
}

.error-text {
  color: var(--color-danger-600);
  font-size: 24rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 16rpx;
}

.error-retry {
  background: var(--color-danger-600);
  color: var(--text-on-primary);
  border: none;
  border-radius: 24rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.loading-state {
  text-align: center;
  padding: 80rpx 24rpx;
  color: var(--gray-500);
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid var(--gray-200);
  border-top: 4rpx solid var(--color-primary-600);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 16rpx;
}

.loading-text {
  font-size: 24rpx;
  display: block;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 专项分析区域 */
.action-section {
  margin-bottom: var(--space-6);
}

.action-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-4);
}

.action-card {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--color-primary-600), var(--color-info-600), var(--color-warning-600), var(--role-admin));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.action-card:active::before {
  opacity: 1;
}

.action-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.12);
}

.action-icon {
  font-size: 40rpx;
  display: block;
  margin-bottom: 12rpx;
}

.action-title {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 20rpx;
  color: var(--gray-500);
  display: block;
  line-height: 1.4;
}

/* 管理员功能区 */
.admin-section {
  margin-bottom: var(--space-6);
}

.admin-grid {
  display: flex;
  gap: var(--space-4);
}

.admin-card {
  flex: 1;
  background: linear-gradient(135deg, var(--bg-subtle), var(--bg-subtle));
  border: 2rpx solid var(--color-warning-600);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
}

.admin-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.3);
}

.admin-icon {
  font-size: 36rpx;
  display: block;
  margin-bottom: 12rpx;
}

.admin-title {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--color-warning-600);
  display: block;
}

.admin-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: var(--color-danger-600);
  color: var(--text-on-primary);
  font-size: 18rpx;
  font-weight: 600;
  padding: 4rpx 8rpx;
  border-radius: 999rpx;
  min-width: 24rpx;
  text-align: center;
}

/* 页脚提示 */
.footer-hint {
  text-align: center;
  color: var(--gray-500);
  font-size: 20rpx;
  margin-top: 32rpx;
  opacity: 0.8;
}
