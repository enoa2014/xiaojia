.page { padding: 16rpx; }
.header { color:#374151; margin-bottom: 12rpx; }
.error { color:#B91C1C; padding: 8rpx 0; }
.loading { color:#6B7280; padding: 8rpx 0; }
.empty { color:#9CA3AF; text-align:center; padding: 40rpx 0; }
.row { display:flex; justify-content:space-between; padding: 10rpx 0; border-bottom: 2rpx solid #F3F4F6; }
.row:last-child { border-bottom: none; }
.date { color:#6B7280; }
.val { color:#111827; font-weight: 600; }
.hint { margin-top: 12rpx; color:#9CA3AF; font-size: 20rpx; }
.summary { background:#ffffff; border-radius: 12rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04); padding: 16rpx; margin: 8rpx 0 16rpx; }
.sum-row { display:flex; justify-content:space-between; padding: 6rpx 0; }
.sum-row .v { font-weight: 600; }
