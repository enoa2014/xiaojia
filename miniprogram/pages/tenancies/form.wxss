.page { padding: var(--space-6); }
.nav-header {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--space-6);
  color: var(--text-on-primary);
  position: sticky;
  top: 0;
  z-index: var(--z-nav);
  box-shadow: var(--shadow-md);
  margin: calc(-1 * var(--space-6)) calc(-1 * var(--space-6)) var(--space-6);
}
.nav-header--green { background: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-primary-700) 100%); }
.nav-header--blue { background: linear-gradient(135deg, var(--color-info-600) 0%, var(--role-social) 100%); }
.nav-header--purple { background: linear-gradient(135deg, var(--role-admin) 0%, var(--role-admin) 100%); }
.nav-header--orange { background: linear-gradient(135deg, var(--role-volunteer) 0%, var(--color-warning-600) 100%); }
.nav-header--pink { background: linear-gradient(135deg, var(--role-parent) 0%, var(--role-parent) 100%); }
.section { margin-bottom: var(--space-6); }
.row { display: flex; gap: var(--space-6); margin-bottom: var(--space-6); }
.col { flex: 1; }
.label { display:block; font-size: var(--font-body); color: var(--text-secondary); margin-bottom: var(--space-2); }
.input, .picker { height: 88rpx; line-height: 88rpx; padding: 0 var(--space-6); border: 2rpx solid var(--gray-300); border-radius: var(--radius-md); }
.error { margin-top: var(--space-2); color: var(--color-danger-600); font-size: var(--font-caption); }
.submit { height: 80rpx; background: var(--color-primary-600); color: var(--text-on-primary); border-radius: var(--radius-lg); }
