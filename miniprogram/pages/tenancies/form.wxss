.page { padding: 24rpx; }
.nav-header {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  color: #FFFFFF;
  position: sticky;
  top: 0;
  z-index: 120;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.1);
  margin: -24rpx -24rpx 24rpx;
}
.nav-header--green { background: linear-gradient(135deg, #22C55E 0%, #16A34A 100%); }
.nav-header--blue { background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%); }
.nav-header--purple { background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%); }
.nav-header--orange { background: linear-gradient(135deg, #FB923C 0%, #F97316 100%); }
.nav-header--pink { background: linear-gradient(135deg, #F472B6 0%, #EC4899 100%); }
.section { margin-bottom: 24rpx; }
.row { display: flex; gap: 24rpx; margin-bottom: 24rpx; }
.col { flex: 1; }
.label { display:block; font-size: 20rpx; color: #374151; margin-bottom: 8rpx; }
.input, .picker { height: 88rpx; line-height: 88rpx; padding: 0 24rpx; border: 2rpx solid #D1D5DB; border-radius: 12rpx; }
.error { margin-top: 8rpx; color: #EF4444; font-size: 18rpx; }
.submit { height: 80rpx; background: #22C55E; color: #fff; border-radius: 16rpx; }
