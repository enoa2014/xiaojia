<view class="page">
  <view class="nav-header {{theme.headerBg}} full-bleed">
    <view class="brand">🏠 退住登记</view>
    <view class="nav-actions"></view>
  </view>
  <view class="card">
    <view class="row">
      <text class="k">退住日期</text>
      <picker mode="date" value="{{checkOutDate}}" bindchange="onDate">
        <view class="picker">{{checkOutDate || '请选择日期'}}</view>
      </picker>
    </view>
    <view class="error" wx:if="{{error}}">{{error}}</view>
    <ui-button variant="primary" size="md" loading="{{submitting}}" bindtap="onSubmit" text="提交退住"></ui-button>
  </view>
</view>
