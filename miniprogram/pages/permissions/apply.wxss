.page { padding: 16rpx; }
.section { margin-bottom: 20rpx; }
.label { display:block; font-size: 20rpx; color:#374151; margin-bottom: 8rpx; }
.chips { display:flex; gap: 12rpx; flex-wrap: wrap; }
.chip { padding: 6rpx 12rpx; border:2rpx solid #D1D5DB; border-radius: 16rpx; color:#6B7280; }
.chip.active { border-color:#22C55E; color:#111827; }
.picker { height: 80rpx; line-height: 80rpx; padding: 0 16rpx; border:2rpx solid #D1D5DB; border-radius: 12rpx; }
.textarea { min-height: 160rpx; padding: 16rpx; border:2rpx solid #D1D5DB; border-radius: 12rpx; }
.error { margin-top: 6rpx; color:#EF4444; font-size: 18rpx; }
.submit { height: 80rpx; background:#22C55E; color:#fff; border-radius: 16rpx; }

