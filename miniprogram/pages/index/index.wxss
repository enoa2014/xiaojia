/* 全局样式 - 移除重复的 .page 和 .nav-header 样式，现已统一到 app.wxss */
.page {
  padding-bottom: 120rpx;
}

/* 移除重复的导航头子元素样式，现已统一到 app.wxss */

.nav-icon {
  font-size: 28rpx;
}

.nav-notif {
  position: relative;
}

.nav-badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  background: #EF4444;
  color: white;
  font-size: 18rpx;
  font-weight: 600;
  min-width: 24rpx;
  height: 24rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.3);
}

.spin {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 用户状态区 */
.user-status {
  margin: 24rpx 24rpx 0;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
}

.user-status::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--role-gradient, linear-gradient(90deg, #22C55E, #16A34A));
}

.user-status--green { --role-gradient: linear-gradient(90deg, #22C55E, #16A34A); }
.user-status--blue { --role-gradient: linear-gradient(90deg, #3B82F6, #2563EB); }
.user-status--purple { --role-gradient: linear-gradient(90deg, #8B5CF6, #7C3AED); }
.user-status--orange { --role-gradient: linear-gradient(90deg, #FB923C, #F97316); }
.user-status--pink { --role-gradient: linear-gradient(90deg, #F472B6, #EC4899); }

.user-profile {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #F8FAFC, #E2E8F0);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.user-info {
  flex: 1;
}

.name-role-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
  margin-right: 16rpx;
}

.role-badge {
  background: var(--role-gradient, linear-gradient(135deg, #22C55E, #16A34A));
  color: white;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.permissions-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.perm-text {
  font-size: 24rpx;
  color: #6B7280;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 20rpx;
  color: #22C55E;
  font-weight: 500;
}

.stats-summary {
  display: flex;
  align-items: center;
  background: #F8FAFC;
  border-radius: 16rpx;
  padding: 20rpx;
  gap: 20rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  font-size: 28rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 4rpx;
}

.stats-label {
  font-size: 20rpx;
  color: #6B7280;
}

.stats-divider {
  width: 2rpx;
  height: 32rpx;
  background: #D1D5DB;
  border-radius: 1rpx;
}

.time-display {
  margin-left: auto;
}

.current-time {
  font-size: 24rpx;
  font-weight: 600;
  color: #4B5563;
  font-family: 'SF Mono', Monaco, monospace;
}

/* 快速操作区 */
.quick-actions-section {
  margin: 24rpx 24rpx 0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1F2937;
}

.role-indicator {
  background: linear-gradient(135deg, #F3F4F6, #E5E7EB);
  color: #6B7280;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.actions-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

/* 选中状态样式，应用于 ActionCard 组件 */
.actions-grid .selected {
  border: 2rpx solid var(--color-primary-600);
  background: var(--bg-subtle);
}

.more-actions {
  margin-top: 16rpx;
  text-align: center;
  padding: 16rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.2s ease;
}

.more-actions:active {
  background: #F9FAFB;
  transform: scale(0.98);
}

.more-text {
  font-size: 24rpx;
  color: #6B7280;
  font-weight: 500;
}

.more-icon {
  font-size: 20rpx;
  color: #9CA3AF;
}

/* 数据总览区 */
.data-overview-section {
  margin: 24rpx 24rpx 0;
}

.overview-controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.period-text {
  font-size: 20rpx;
  color: #6B7280;
  background: #F3F4F6;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.refresh-hint {
  font-size: 20rpx;
  color: #3B82F6;
  font-weight: 500;
}

.stats-scroll {
  width: 100%;
  margin-top: 16rpx;
}

.stats-container {
  display: flex;
  gap: 16rpx;
  padding-bottom: 8rpx;
}

.index-stat-card {
  min-width: 240rpx;
  flex-shrink: 0;
}

/* 旧的统计卡片样式已替换为 StatCard 组件 */

.spacer-card {
  min-width: 24rpx;
}

.scroll-indicator {
  display: flex;
  justify-content: center;
  margin-top: 16rpx;
}

.indicator-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: #E5E7EB;
  transition: all 0.3s ease;
}

.dot.active {
  background: #22C55E;
  transform: scale(1.2);
}

/* 任务提醒区 */
.tasks-section {
  margin: 24rpx 24rpx 0;
}

.task-counter {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.counter-text {
  background: #EF4444;
  color: white;
  font-size: 18rpx;
  font-weight: 700;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  min-width: 32rpx;
  text-align: center;
}

.view-all-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 20rpx;
  color: #6B7280;
  font-weight: 500;
}

.arrow {
  font-size: 18rpx;
  color: #9CA3AF;
}

.tasks-list {
  margin-top: 16rpx;
}

.task-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-left: 4rpx solid #E5E7EB;
  transition: all 0.3s ease;
}

.task-card.priority-high {
  border-left-color: #EF4444;
  background: linear-gradient(90deg, #FEF2F2 0%, white 20%);
}

.task-card.priority-medium {
  border-left-color: #F59E0B;
  background: linear-gradient(90deg, #FFFBEB 0%, white 20%);
}

.task-card.priority-normal {
  border-left-color: #22C55E;
  background: linear-gradient(90deg, #F0FDF4 0%, white 20%);
}

.task-main {
  display: flex;
  align-items: center;
  flex: 1;
}

.priority-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.task-content {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.task-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 6rpx;
  line-height: 1.3;
}

.task-desc {
  font-size: 22rpx;
  color: #6B7280;
  line-height: 1.4;
}

.task-action {
  margin-left: 16rpx;
}

.action-icon {
  font-size: 20rpx;
  color: #9CA3AF;
  font-weight: 600;
}

.empty-tasks {
  text-align: center;
  padding: 60rpx 24rpx;
  color: #9CA3AF;
}

.empty-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 12rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 最近动态区 */
.updates-section {
  margin: 24rpx 24rpx 0;
}

.updates-timeline {
  margin-top: 16rpx;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.update-entry {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  position: relative;
}

.update-entry:last-child {
  margin-bottom: 0;
}

.update-entry:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 16rpx;
  top: 32rpx;
  bottom: -20rpx;
  width: 2rpx;
  background: #E5E7EB;
}

.timeline-dot {
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background: #F3F4F6;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
  position: relative;
  z-index: 1;
}

.dot-inner {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: #22C55E;
}

.update-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.update-text {
  font-size: 26rpx;
  color: #1F2937;
  line-height: 1.4;
  margin-bottom: 6rpx;
  font-weight: 500;
}

.update-time {
  font-size: 20rpx;
  color: #9CA3AF;
  font-family: 'SF Mono', Monaco, monospace;
}

.empty-updates {
  text-align: center;
  padding: 60rpx 24rpx;
  color: #9CA3AF;
}

/* 骨架屏 */
.skeleton {
  padding: 24rpx;
}

.sk-qa {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.sk-card {
  height: 120rpx;
  background: linear-gradient(90deg, #F1F5F9, #E2E8F0, #F1F5F9);
  background-size: 200% 100%;
  border-radius: 16rpx;
  animation: shimmer 1.5s ease-in-out infinite;
}

.sk-stats {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.sk-stat {
  flex: 1;
  height: 100rpx;
  background: linear-gradient(90deg, #F1F5F9, #E2E8F0, #F1F5F9);
  background-size: 200% 100%;
  border-radius: 16rpx;
  animation: shimmer 1.5s ease-in-out infinite;
}

.sk-tasks {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.sk-task {
  height: 80rpx;
  background: linear-gradient(90deg, #F1F5F9, #E2E8F0, #F1F5F9);
  background-size: 200% 100%;
  border-radius: 12rpx;
  animation: shimmer 1.5s ease-in-out infinite;
}

@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

/* 响应式调整 */
@media screen and (max-width: 750rpx) {
  .actions-grid {
    grid-template-columns: 1fr;
  }
  
  .action-card {
    padding: 20rpx;
  }
  
  .stat-card {
    min-width: 200rpx;
  }
}