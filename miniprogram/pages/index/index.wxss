page { background: #f6f8fa; }
.nav-header { height: 88rpx; background: linear-gradient(135deg, #22C55E 0%, #16A34A 100%); color: #fff; display:flex; align-items:center; justify-content:space-between; padding:0 24rpx; position:sticky; top:0; z-index:10; }
.nav-header .brand { font-weight:600; }
.nav-header .tool { margin-left: 16rpx; }

.user-status { height: 120rpx; background:#F0FDF4; padding: 24rpx; display:flex; align-items:center; justify-content:space-between; border-bottom:2rpx solid #DCFCE7; }
.identity { display:flex; align-items:center; }
.avatar { width:48rpx; height:48rpx; border-radius:24rpx; background:#DCFCE7; display:flex; align-items:center; justify-content:center; margin-right:12rpx; }
.name { font-weight:600; color:#111827; }
.perm .ok { color:#059669; }
.work { text-align:right; color:#374151; }
.today { color:#059669; font-weight:600; }

.quick-actions { padding:24rpx; background:#fff; display:grid; grid-template-columns: 1fr 1fr; gap:16rpx; }
.action-card { background:#fff; border:2rpx solid #F3F4F6; border-radius:16rpx; padding:20rpx; display:flex; flex-direction:column; align-items:center; justify-content:center; box-shadow:0 2rpx 8rpx rgba(0,0,0,0.04); transition: all .2s ease; }
.action-card:active { transform: scale(0.98); background:#F9FAFB; }
.action-card .icon { font-size: 32rpx; margin-bottom: 16rpx; }
.action-card .title { font-size:24rpx; font-weight:600; color:#111827; }
.action-card .subtitle { font-size:20rpx; color:#6B7280; }

.data-overview { background:#F9FAFB; padding:24rpx; }
.section-title { margin-bottom: 12rpx; color:#111827; font-weight:600; }
.stats-container { display:flex; overflow-x:auto; gap:16rpx; height:112rpx; }
.stats-card { min-width: 200rpx; height:112rpx; background: linear-gradient(135deg, #10B981 0%, #059669 100%); border-radius:16rpx; padding:20rpx; color:#fff; display:flex; flex-direction:column; justify-content:space-between; }
.stats-card .label { opacity:.9; }
.stats-card .value { font-size:36rpx; font-weight:700; }

.task-reminders { background:#fff; padding:24rpx; margin-top:16rpx; }
.task-header { display:flex; align-items:center; justify-content:space-between; margin-bottom:20rpx; }
.task-list {}
.task-item { display:flex; flex-direction:column; align-items:flex-start; padding:16rpx; background:#F9FAFB; border-left: 8rpx solid var(--priority-color); border-radius: 0 12rpx 12rpx 0; margin-bottom:12rpx; }
.task-title { font-weight:600; color:#111827; }
.task-desc { color:#6B7280; font-size:20rpx; }
.link { color:#059669; }

.recent-updates { background:#fff; padding:24rpx; margin-top:16rpx; margin-bottom:20rpx; }
.timeline-container { position:relative; padding-left:32rpx; }
.timeline-item { position:relative; padding-bottom:24rpx; border-left:2rpx solid #E5E7EB; }
.timeline-item::before { content:''; position:absolute; left:-8rpx; top:8rpx; width:12rpx; height:12rpx; border-radius:50%; background:#22C55E; }
.timeline-item .time { color:#6B7280; font-size:18rpx; }
.timeline-item .text { color:#374151; font-size:20rpx; }
/* 骨架屏 */
.skeleton { padding: 24rpx; }
.sk-qa { display:grid; grid-template-columns:1fr 1fr; gap:16rpx; margin-bottom:20rpx; }
.sk-card { height: 120rpx; background: linear-gradient(90deg,#f3f4f6 25%,#e5e7eb 37%,#f3f4f6 63%); background-size: 400% 100%; border-radius:16rpx; animation: shimmer 1.2s infinite; }
.sk-stats { display:flex; gap:16rpx; margin-bottom:20rpx; }
.sk-stat { width: 200rpx; height:112rpx; background: linear-gradient(90deg,#f3f4f6 25%,#e5e7eb 37%,#f3f4f6 63%); background-size: 400% 100%; border-radius:16rpx; animation: shimmer 1.2s infinite; }
.sk-tasks { display:flex; flex-direction:column; gap:12rpx; }
.sk-task { height: 80rpx; background: linear-gradient(90deg,#f3f4f6 25%,#e5e7eb 37%,#f3f4f6 63%); background-size: 400% 100%; border-radius:12rpx; animation: shimmer 1.2s infinite; }
@keyframes shimmer { 0% { background-position: 100% 0; } 100% { background-position: -100% 0; } }

/* 统计滚动吸附 */
.stats-container { scroll-snap-type: x mandatory; }
.stats-card { scroll-snap-align: start; }
