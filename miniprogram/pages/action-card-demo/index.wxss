/* ActionCard 演示页面样式 */

.page {
  padding-bottom: 120rpx;
  background-color: var(--gradient-page);
}

/* 导航头部 */
.nav-header {
  background: var(--gradient-primary);
  color: white;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.brand {
  font-size: var(--font-xl);
  font-weight: var(--weight-bold);
  text-align: center;
}

/* 演示区域 */
.demo-section {
  margin: 0 24rpx 32rpx;
}

.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: var(--font-h1);
  font-weight: var(--weight-bold);
  color: var(--text-primary);
}

/* 演示网格 */
.demo-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

/* 演示列表 */
.demo-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 服务演示卡片特殊样式 */
.service-demo-card {
  border-left: 4rpx solid var(--color-primary-600);
}

/* 操作日志 */
.log-container {
  height: 300rpx;
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: 16rpx;
  box-shadow: var(--shadow-sm);
}

.log-item {
  display: flex;
  flex-direction: column;
  padding: 12rpx 0;
  border-bottom: 1rpx solid var(--gray-200);
}

.log-item:last-child {
  border-bottom: none;
}

.log-time {
  font-size: var(--font-caption);
  color: var(--gray-500);
  margin-bottom: 4rpx;
}

.log-content {
  font-size: var(--font-body);
  color: var(--text-primary);
  line-height: var(--lh-normal);
}

/* 响应式调整 */
@media screen and (max-width: 750rpx) {
  .demo-grid {
    grid-template-columns: 1fr;
  }
}