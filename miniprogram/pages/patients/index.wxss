.page { padding: 12rpx 12rpx 100rpx; }
.stats { display:flex; gap: 12rpx; margin-bottom: 12rpx; }
.stat-card { flex:1; background:#F0FDF4; border:2rpx solid #DCFCE7; border-radius: 12rpx; padding: 16rpx; text-align:center; }
.stat-num { display:block; color:#16A34A; font-size: 28rpx; font-weight: 600; }
.stat-label { color:#065F46; font-size: 18rpx; }
.search-bar { display:flex; gap: 12rpx; margin-bottom: 12rpx; }
.search-input { flex:1; height: 76rpx; padding: 0 20rpx; border:2rpx solid #D1D5DB; border-radius: 12rpx; }
.search-btn { width: 160rpx; height: 76rpx; background:#22C55E; color:#fff; border-radius: 12rpx; }
.filters { display:flex; gap: 12rpx; margin-bottom: 8rpx; overflow-x:auto; }
.chip { padding: 6rpx 12rpx; border:2rpx solid #D1D5DB; border-radius: 20rpx; color:#6B7280; white-space:nowrap; }
.chip.active { color:#111827; border-color:#22C55E; }
.filters .date { height: 76rpx; line-height: 76rpx; padding: 0 16rpx; border:2rpx solid #D1D5DB; border-radius: 12rpx; min-width: 200rpx; color:#374151; }
.item { display:flex; align-items:flex-start; gap: 12rpx; padding: 16rpx 8rpx; border-bottom:2rpx solid #F3F4F6; }
.avatar { width: 56rpx; height:56rpx; border-radius: 28rpx; background:#E5E7EB; display:flex; align-items:center; justify-content:center; color:#374151; font-weight:600; }
.content { flex:1; }
.name { display:block; font-size: 22rpx; color:#111827; font-weight:600; }
.meta { display:block; font-size: 18rpx; color:#6B7280; margin-top: 2rpx; }
.tags { display:flex; gap: 8rpx; margin-top: 6rpx; }
.tag { font-size: 18rpx; padding: 2rpx 8rpx; border-radius: 8rpx; }
.tag-green { background:#DCFCE7; color:#065F46; }
.tag-yellow { background:#FEF3C7; color:#92400E; }
.actions { display:flex; gap: 8rpx; margin-top: 10rpx; }
.btn { height: 60rpx; line-height:60rpx; padding: 0 16rpx; border:2rpx solid #D1D5DB; border-radius: 12rpx; background:#fff; color:#374151; font-size: 18rpx; }
.arrow { color:#9CA3AF; font-size: 28rpx; align-self:center; }
.empty { text-align:center; color:#9CA3AF; padding: 40rpx 0; }
.fab { position: fixed; right: 24rpx; bottom: 120rpx; width: 96rpx; height:96rpx; border-radius: 48rpx; background:#22C55E; color:#fff; display:flex; align-items:center; justify-content:center; font-size: 36rpx; box-shadow: 0 8rpx 24rpx rgba(34,197,94,.3); }
