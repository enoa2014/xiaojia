.detail-page { padding-bottom: 32rpx; }
.card { background:#FFF; border-radius: 16rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06); padding: 20rpx; margin: 16rpx; }
.row { display:flex; justify-content:space-between; padding: 12rpx 0; border-bottom: 2rpx solid #F3F4F6; }
.row:last-child { border-bottom: none; }
.k { color:#6B7280; font-size: 20rpx; }
.v { color:#111827; font-size: 22rpx; }
.empty { text-align:center; color:#9CA3AF; padding: 40rpx 0; }
.permission-section { margin: 16rpx; padding: 16rpx; background:#FFFBF0; border-left: 6rpx solid #FF9500; border-radius: 12rpx; display:flex; align-items:center; justify-content:space-between; }
.permission-section.ok { background:#F0FFF4; border-left-color:#34C759; }
.apply-btn { background:#007AFF; color:#fff; padding: 8rpx 16rpx; border-radius: 16rpx; font-size: 20rpx; }
.tabs { display:flex; gap: 12rpx; margin: 8rpx 16rpx; overflow-x:auto; }
.tab { padding: 10rpx 20rpx; border:2rpx solid #D1D5DB; border-radius: 24rpx; color:#6B7280; white-space:nowrap; }
.tab.active { background:#E3F2FD; color:#1565C0; border-color:#93C5FD; }
.section { margin-top: 8rpx; }
.patient-header { padding: 24rpx 16rpx; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color:#fff; }
.ph-row { display:flex; gap: 16rpx; align-items:center; }
.ph-avatar { width: 72rpx; height:72rpx; border-radius:36rpx; background: rgba(255,255,255,.2); display:flex; align-items:center; justify-content:center; font-size: 28rpx; font-weight:600; }
.ph-main { flex:1; }
.ph-name { font-size: 28rpx; font-weight:700; }
.ph-meta { font-size: 20rpx; opacity:.9; }
.ph-actions { margin-top: 12rpx; display:flex; gap: 12rpx; }
.ph-btn { background: rgba(255,255,255,.2); color:#fff; padding: 6rpx 12rpx; border-radius: 12rpx; font-size: 20rpx; }
