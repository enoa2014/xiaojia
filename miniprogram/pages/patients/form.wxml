<view class="page">
  <view class="section">
    <text class="label">姓名</text>
    <input class="input" placeholder="请输入姓名" value="{{name}}" bindinput="onName" />
  </view>
  <view class="section">
    <text class="label">身份证</text>
    <input class="input" placeholder="请输入身份证号码" value="{{id_card}}" bindinput="onIdCard" />
    <text class="error" wx:if="{{errors.id_card}}">{{errors.id_card}}</text>
  </view>
  <view class="section">
    <text class="label">手机号（可选）</text>
    <input class="input" type="number" placeholder="11位手机号" value="{{phone}}" bindinput="onPhone" />
    <text class="error" wx:if="{{errors.phone}}">{{errors.phone}}</text>
  </view>
  <view class="section">
    <text class="label">出生日期（可选）</text>
    <picker mode="date" value="{{birthDate}}" bindchange="onBirthDate">
      <view class="picker">{{birthDate || '选择日期'}} </view>
    </picker>
  </view>
  <button class="submit" loading="{{submitting}}" bindtap="onSubmit">提交</button>
</view>
