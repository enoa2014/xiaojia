.page { padding: 24rpx; background: #FFFFFF; }
.section { margin-bottom: 24rpx; }
.label { display:block; font-size: 20rpx; color: #374151; margin-bottom: 8rpx; }
.input { height: 88rpx; padding: 0 24rpx; border: 2rpx solid #D1D5DB; border-radius: 12rpx; background: #FFF; color:#111827; }
.input:focus { border-color: #22C55E; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04); }
.picker { height: 88rpx; line-height: 88rpx; padding: 0 24rpx; border: 2rpx solid #D1D5DB; border-radius: 12rpx; color: #111827; background:#FFF; }
.error-border { border-color: #EF4444 !important; }
.error { margin-top: 8rpx; color: #EF4444; font-size: 18rpx; line-height: 1.4; }
.submit { height: 80rpx; background: #22C55E; color: #fff; border-radius: 16rpx; }
.submit:active { background: #16A34A; }
.textarea { min-height: 140rpx; padding: 16rpx 24rpx; border: 2rpx solid #D1D5DB; border-radius: 12rpx; line-height: 1.5; }
.textarea:focus { border-color: #22C55E; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04); }
.seg { display:flex; gap: 24rpx; padding: 8rpx 0; }
.seg-item { display:flex; align-items:center; gap: 8rpx; color:#111827; }
.more-toggle { display:flex; justify-content:space-between; align-items:center; padding: 16rpx 8rpx; color:#374151; }
.more-text { font-size: 20rpx; }
.more-arrow { font-size: 20rpx; color:#6B7280; }
