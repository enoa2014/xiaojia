.page { padding: 0 24rpx; background: var(--gradient-page); }
.section { margin-bottom: 24rpx; }
.label { display:block; font-size: var(--font-md); color: var(--text-secondary); margin-bottom: 8rpx; }
.input { height: 88rpx; padding: 0 24rpx; border: none; border-radius: 0; background: transparent; color: var(--text-primary); width: 100%; box-sizing: border-box; }
.input:focus { outline: none; }
.picker { height: 88rpx; line-height: 88rpx; padding: 0 24rpx; border: 2rpx solid var(--border-subtle); border-radius: var(--radius-md); color: var(--text-primary); background: var(--bg-primary); }
.error-border { border-color: var(--color-danger-600) !important; }
.error { margin-top: 8rpx; color: var(--color-danger-600); font-size: 18rpx; line-height: 1.4; }
.submit { height: 80rpx; background: var(--color-primary-600); color: var(--text-on-primary); border-radius: var(--radius-lg); }
.submit:active { background: var(--color-primary-700); }
.textarea { min-height: 140rpx; padding: 16rpx 24rpx; border: 2rpx solid var(--border-subtle); border-radius: var(--radius-md); line-height: 1.5; }
.textarea:focus { border-color: var(--color-primary-600); box-shadow: var(--shadow-sm); }
.seg { display:flex; gap: 24rpx; padding: 8rpx 0; }
.seg-item { display:flex; align-items:center; gap: 8rpx; color: var(--text-primary); }
.more-toggle { display:flex; justify-content:space-between; align-items:center; padding: 16rpx 8rpx; color: var(--text-secondary); }
.more-text { font-size: var(--font-md); }
.more-arrow { font-size: var(--font-md); color: var(--gray-500); }
