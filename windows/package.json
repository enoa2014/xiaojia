{
  "name": "xiaojia-desktop",
  "version": "0.1.0",
  "description": "Windows desktop port (Electron + React + SQLite)",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "run-p dev:renderer dev:preload dev:main:watch dev:electron",
    "dev:renderer": "vite --config app/renderer/vite.config.ts",
    "dev:preload": "tsc -p app/preload/tsconfig.json --watch --preserveWatchOutput false",
    "dev:main": "wait-on tcp:5173 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 tsx app/main/index.ts",
    "build": "run-s build:renderer build:preload build:main",
    "build:renderer": "vite build --config app/renderer/vite.config.ts",
    "build:preload": "tsc -p app/preload/tsconfig.json",
    "build:main": "tsc -p app/main/tsconfig.json",
    "package": "pnpm run build && electron-builder",
    "typecheck": "tsc --build",
    "clean": "rimraf dist",
    "dev:main:watch": "tsc -p app/main/tsconfig.json --watch --preserveWatchOutput false",
    "dev:electron": "wait-on dist/main/app/main/index.js dist/preload/app/preload/index.js tcp:5173 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 node ./scripts/run-electron.js dist/main/app/main/index.js",
    "import:patients": "cross-env ELECTRON_RUN_AS_NODE=1 electron ./scripts/import-patients.js",
    "seed:data": "cross-env ELECTRON_RUN_AS_NODE=1 electron ./scripts/seed-sample-data.js"
  },
  "dependencies": {
    "better-sqlite3": "^9.0.0",
    "electron": "^29.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.4.2",
    "vite": "^5.1.4",
    "wait-on": "^7.0.1"
  }
}